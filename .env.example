# ============================================
# НАСТРОЙКИ БОТА
# ============================================

# Токен бота от @BotFather (ОБЯЗАТЕЛЬНО!)
BOT_TOKEN=your_bot_token_here

# ID администраторов через запятую (например: 123456789,987654321)
ADMIN_IDS=123456789

# ============================================
# НАСТРОЙКИ POSTGRESQL
# ============================================

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=support_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

# ============================================
# НАСТРОЙКИ ПОДДЕРЖКИ
# ============================================

# ВАЖНО: Используйте username БЕЗ @ в начале!
SUPPORT_USERNAME=tech_support_username
SUPPORT_EMAIL=support@example.com
SUPPORT_PHONE=+79991234567
WORKING_HOURS=9:00-18:00

# ============================================
# НАСТРОЙКИ БОТА
# ============================================

LOGGING_LEVEL=INFO
BACKUP_INTERVAL_HOURS=24
ENABLE_BACKUP=true
BACKUP_KEEP_DAYS=30

# ============================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# ============================================

SECRET_KEY=your_secret_key_here_change_this
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5

# ============================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# ============================================

CACHE_TTL_MINUTES=5
QUERY_TIMEOUT_SECONDS=30
MAX_CONNECTIONS=10
